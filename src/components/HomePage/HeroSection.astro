---
import { Image } from "astro:assets";
import gift from "../../assets/images/christmas-gift.gif";
import truck from "../../assets/images/delivery-truck.gif";
import credit from "../../assets/images/credit-card.gif";
import { categoryData } from "../../data/Items.js";
import ScrollItems from "./ScrollItems.astro";

const features = [
  { text: "On-Time Delivery", image: truck, alt: "Animated delivery truck" },
  { text: "90 Days Credit", image: credit, alt: "Animated credit card" },
];
---

<style>
  /* KEY CHANGE 1: Define the start and end states for the item animation. */
  /* This is a "from" state: invisible and slightly moved down. */
  .item-card {
    opacity: 0;
    transform: translateY(15px);
    transition:
      opacity 0.4s ease-out,
      transform 0.4s ease-out;
  }
  /* This is the "to" state: fully visible and in its final position. */
  .item-card.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<section class="py-16 sm:py-20 relative overflow-x-clip">
  <Image
    src={gift}
    alt=""
    aria-hidden="true"
    role="presentation"
    class="hidden md:block absolute top-8 left-4 lg:left-10 h-16 w-16 -z-10"
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="flex flex-col lg:flex-row gap-8 lg:gap-12 justify-between items-center text-center lg:text-left"
    >
      <div>
        <h2
          class="text-4xl sm:text-5xl font-bold bg-gradient-to-r from-pink-500 via-orange-500 to-[#bf9b42] bg-clip-text text-transparent"
        >
          Premium Gifts in Dubai
        </h2>
        <p class="mt-3 text-gray-600 max-w-lg mx-auto lg:mx-0">
          35k+ Businesses Served — 200k+ Deliveries — Same-Day Printing in Dubai
        </p>
      </div>
      <div class="flex flex-row sm:flex-col gap-4">
        {
          features.map((feature) => (
            <div class="flex items-center  rounded-full pr-3 py-1">
              <p class="bg-[#bf9b42] px-4 py-2 rounded-full font-semibold w-36 text-center text-sm text-black">
                {feature.text}
              </p>
              <Image
                src={feature.image}
                alt={feature.alt}
                class="h-12 w-12 ml-2"
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div id="product-category-section" class="pt-12 sm:pt-16">
    <ScrollItems />
    <div class="mt-8 relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {
        categoryData.map((category, index) => (
          <div
            data-panel-id={category.id}
            class:list={["items-panel", { hidden: index > 0 }]}
          >
            <h3 class="text-2xl font-bold mb-6 text-gray-800">
              Top Picks in <span class="text-orange-500">{category.title}</span>
            </h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 sm:gap-6">
              {category.items.map((item) => (
                // KEY CHANGE 2: Add the `item-card` class for our animation hook.
                <a
                  href={item.href}
                  class:list={[
                    "item-card group block text-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#bf9b42] rounded-2xl",
                    // Make the first panel's items visible on initial load.
                    { "is-visible": index === 0 },
                  ]}
                >
                  <div class="bg-white rounded-2xl h-full p-2 border-2 border-gray-100 group-hover:border-[#bf9b42] group-hover:shadow-lg transition-all duration-300 flex flex-col items-center justify-start group-hover:-translate-y-1">
                    <div class="aspect-square w-full rounded-md overflow-hidden flex items-center justify-center bg-gray-50">
                      <Image
                        src={item.image}
                        alt={item.name}
                        class="object-contain max-h-full max-w-full group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                    <h4 class="mt-3 text-sm font-semibold text-gray-900 leading-tight">
                      {item.name}
                    </h4>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  function initializeProductCategorySwitcher(sectionId: string): void {
    const section = document.getElementById(sectionId);
    if (!section) return;

    const categoryCards =
      section.querySelectorAll<HTMLDivElement>(".category-card");
    const itemPanels = section.querySelectorAll<HTMLDivElement>(".items-panel");
    const staggerDelay = 50; // milliseconds

    const animatePanelItems = (panel: HTMLElement): void => {
      const items = panel.querySelectorAll<HTMLDivElement>(".item-card");
      items.forEach((item, index) => {
        item.style.transitionDelay = `${index * staggerDelay}ms`;
        item.classList.add("is-visible");
      });
    };

    const resetPanelItems = (panel: HTMLElement): void => {
      const items = panel.querySelectorAll<HTMLDivElement>(".item-card");
      items.forEach((item) => {
        item.style.transitionDelay = "";
        item.classList.remove("is-visible");
      });
    };

    categoryCards.forEach((card) => {
      card.addEventListener("click", () => {
        const categoryId = (card.dataset.categoryId as string) || "";
        if (!categoryId) return;

        categoryCards.forEach((c) => c.classList.remove("is-active"));
        card.classList.add("is-active");

        itemPanels.forEach((panel) => {
          const isTargetPanel = panel.dataset.panelId === categoryId;
          panel.classList.toggle("hidden", !isTargetPanel);

          if (isTargetPanel) {
            animatePanelItems(panel);
          } else {
            resetPanelItems(panel);
          }
        });
      });
    });

    // Animate the first visible panel on page load
    const initialPanel = section.querySelector<HTMLElement>(
      ".items-panel:not(.hidden)",
    );
    if (initialPanel) {
      setTimeout(() => {
        animatePanelItems(initialPanel);
      }, 100);
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    initializeProductCategorySwitcher("product-category-section");
  });
</script>

<script>
  // ----------------------------
  // Product Category Switcher
  // ----------------------------
  function initializeProductCategorySwitcher(sectionId: string): void {
    const section = document.getElementById(sectionId);
    if (!section) return;

    // Note: .category-card elements are likely inside <ScrollItems />
    const categoryCards =
      section.querySelectorAll<HTMLDivElement>(".category-card");
    const itemPanels = section.querySelectorAll<HTMLDivElement>(".items-panel");
    const staggerDelay = 40;

    const animatePanelItems = (panel: HTMLElement): void => {
      const items = panel.querySelectorAll<HTMLDivElement>(".item-card");
      items.forEach((item, index) => {
        setTimeout(() => {
          item.style.transitionDelay = `${index * staggerDelay}ms`;
          item.classList.add("is-visible");
        }, 50);
      });
    };

    const resetPanelItems = (panel: HTMLElement): void => {
      const items = panel.querySelectorAll<HTMLDivElement>(".item-card");
      items.forEach((item) => {
        item.style.transitionDelay = "0ms";
        item.classList.remove("is-visible");
      });
    };

    categoryCards.forEach((card) => {
      card.addEventListener("click", () => {
        const categoryId = (card.dataset.categoryId as string) || "";
        if (!categoryId) return;

        categoryCards.forEach((c) => c.classList.remove("is-active"));
        card.classList.add("is-active");

        itemPanels.forEach((panel) => {
          const isTargetPanel = panel.dataset.panelId === categoryId;

          if (!isTargetPanel) {
            resetPanelItems(panel);
          }

          panel.classList.toggle("hidden", !isTargetPanel);

          if (isTargetPanel) {
            setTimeout(() => animatePanelItems(panel), 50);
          }
        });
      });
    });

    // Animate the first visible panel on load
    const initialPanel = section.querySelector<HTMLElement>(
      ".items-panel:not(.hidden)",
    );
    if (initialPanel) {
      setTimeout(() => animatePanelItems(initialPanel), 150);
    }
  }

  // ----------------------------
  // Carousel Functionality
  // ----------------------------
  function initializeCarousel(): void {
    const track = document.getElementById("carousel-track");
    const container = document.getElementById("carousel-container");
    const prevBtn = document.getElementById("carousel-prev");
    const nextBtn = document.getElementById("carousel-next");
    const dots = document.querySelectorAll(".carousel-dot");

    // Guard clause: If elements aren't found, stop (prevents errors)
    if (!track || !container || !prevBtn || !nextBtn) {
      console.warn("Carousel elements not found. Check HTML IDs.");
      return;
    }

    const slides = track.children;
    let index = 0;
    let autoSlideInterval: number;
    let isPaused = false;

    function updateCarousel(): void {
      // Move track
      (track as HTMLElement).style.transform = `translateX(-${index * 100}%)`;

      // Update dots
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.add("active");
          dot.classList.remove("bg-white/60", "w-2");
        } else {
          dot.classList.remove("active");
          dot.classList.add("bg-white/60", "w-2");
        }
      });
    }

    function nextSlide(): void {
      index = (index + 1) % slides.length;
      updateCarousel();
    }

    function prevSlide(): void {
      index = (index - 1 + slides.length) % slides.length;
      updateCarousel();
    }

    function goToSlide(slideIndex: number): void {
      index = slideIndex;
      updateCarousel();
    }

    function startAutoSlide(): void {
      clearInterval(autoSlideInterval);
      if (!isPaused) {
        autoSlideInterval = window.setInterval(nextSlide, 4000);
      }
    }

    function stopAutoSlide(): void {
      clearInterval(autoSlideInterval);
    }

    // Event listeners
    prevBtn.addEventListener("click", () => {
      prevSlide();
      stopAutoSlide();
      startAutoSlide();
    });

    nextBtn.addEventListener("click", () => {
      nextSlide();
      stopAutoSlide();
      startAutoSlide();
    });

    dots.forEach((dot) => {
      dot.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        const slideIndex = parseInt(target.dataset.index || "0");
        goToSlide(slideIndex);
        stopAutoSlide();
        startAutoSlide();
      });
    });

    // Pause on hover
    container.addEventListener("mouseenter", () => {
      isPaused = true;
      stopAutoSlide();
    });

    container.addEventListener("mouseleave", () => {
      isPaused = false;
      startAutoSlide();
    });

    // Touch/swipe support
    let touchStartX = 0;
    let touchEndX = 0;

    container.addEventListener(
      "touchstart",
      (e) => {
        touchStartX = e.changedTouches[0].screenX;
        stopAutoSlide();
      },
      { passive: true },
    );

    container.addEventListener(
      "touchend",
      (e) => {
        touchEndX = e.changedTouches[0].screenX;
        if (touchStartX - touchEndX > 50) {
          nextSlide();
        } else if (touchEndX - touchStartX > 50) {
          prevSlide();
        }
        startAutoSlide();
      },
      { passive: true },
    );

    // Start auto-rotation
    startAutoSlide();
  }

  // Initialize everything when the DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    initializeProductCategorySwitcher("product-category-section");
    initializeCarousel();
  });
</script>

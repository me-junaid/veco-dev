<style>
  /* Card Animations */
  .item-card {
    opacity: 0;
    transform: translateY(20px) scale(0.95);
    transition:
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .item-card.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Carousel Styles */
  #carousel-track {
    transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Active Dot Style */
  .carousel-dot.active {
    background: white;
    width: 2rem; /* w-8 */
    opacity: 1;
  }

  /* Feature Animations */
  .feature-badge {
    animation: float 3s ease-in-out infinite;
  }

  .feature-badge:nth-child(2) {
    animation-delay: 1.5s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Decoration Animations */
  .gift-decoration {
    animation: rotate-gift 4s ease-in-out infinite;
  }

  @keyframes rotate-gift {
    0%,
    100% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(10deg) scale(1.1);
    }
  }

  /* Shimmer Effect */
  .shimmer {
    position: relative;
    overflow: hidden;
  }

  .shimmer::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    100% {
      left: 100%;
    }
  }
</style>


<section class="flex min-h-screen items-center justify-center py-12 px-4">
  <div
    class="w-full max-w-md rounded-2xl bg-black p-6 text-white shadow-2xl sm:p-8"
  >
    <!-- Header Title -->
    <h2 class="text-center text-2xl font-bold sm:text-3xl">
      Get Your Custom Print Quote in Seconds
    </h2>

    <!-- Production Volume Toggle -->
    <div
      class="mt-6 mb-8 flex items-center justify-center gap-3 font-semibold sm:gap-4"
    >
      <span class="text-sm text-gray-300 sm:text-base"
        >Low Volume Production</span
      >
      <label
        for="volume-toggle"
        class="relative inline-flex cursor-pointer items-center"
      >
        <input type="checkbox" id="volume-toggle" class="peer sr-only" />
        <div
          class="h-8 w-16 rounded-full bg-white p-1 transition-colors duration-300 ease-in-out peer-checked:bg-white"
        >
          <div
            class="h-6 w-6 transform rounded-full bg-amber-500 shadow-md transition-transform duration-300 ease-in-out peer-checked:translate-x-full"
          >
          </div>
        </div>
      </label>
      <span class="text-sm sm:text-base">High Volume Production</span>
    </div>

    <!-- Main Quote Form -->
    <div class="rounded-lg bg-white p-5 text-gray-800 sm:p-6">
      <form action="#" method="POST" onsubmit="event.preventDefault();">
        <textarea
          name="quote_details"
          rows="4"
          class="w-full resize-none rounded-md border-0 p-2 text-base placeholder-gray-400 focus:ring-2 focus:ring-amber-500"
          placeholder="Need apparels, labels, packaging, or custom prints?
Ask by typing â€” get a quote instantly."
        ></textarea>

        <label
          for="file-upload"
          class="mt-4 flex cursor-pointer items-center justify-center gap-2.5 rounded-lg bg-gray-100 py-3 px-4 font-semibold text-gray-700 transition-colors duration-200 hover:bg-gray-200"
        >
          <!-- Upload Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"
            ></path>
          </svg>
          <span>Upload your Artwork / Image</span>
        </label>
        <input
          id="file-upload"
          name="artwork"
          type="file"
          class="hidden"
          multiple
        />

        <div class="mt-4 flex items-center gap-2 text-xs text-gray-500">
          <!-- Lock Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 flex-shrink-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            ></path>
          </svg>
          <p>
            Supports .jpg, .jpeg, .png, .pdf & .ai. 100% secure and
            confidential.
          </p>
        </div>

        <button
          type="submit"
          class="mt-6 flex w-full items-center justify-center gap-2 rounded-lg bg-[#bf9b42] py-3 px-4 text-lg font-bold text-black transition-colors duration-200 hover:bg-[#a6883a]"
        >
          <span>Continue to Quote</span>
          <!-- Arrow Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="3"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </form>
    </div>

    <!-- Trusted By Section -->
    <div class="mt-10 text-center">
      <h3 class="text-xl font-semibold text-gray-300">
        Trusted by 35k+ businesses
      </h3>
      <div
        class="mt-6 flex flex-wrap items-center justify-center gap-x-6 gap-y-4"
      >
      </div>
    </div>
  </div>
</section>
